{
  "name": "olian-enterprise-llm-frontend",
  "version": "1.0.0",
  "description": "Enterprise LLM Platform Frontend - Secure AI chat interface with document training capabilities",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "remix build",
    "dev": "remix dev --manual",
    "start": "remix-serve ./build/index.js",
    "typecheck": "tsc",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "preview": "vite preview"
  },
  "dependencies": {
    "@remix-run/dev": "^2.8.1",
    "@remix-run/node": "^2.8.1",
    "@remix-run/react": "^2.8.1",
    "@remix-run/serve": "^2.8.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "lucide-react": "^0.263.1",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "clsx": "^2.1.0",
    "axios": "^1.6.7",
    "socket.io-client": "^4.7.4",
    "zustand": "^4.5.0",
    "react-hook-form": "^7.49.3",
    "@hookform/resolvers": "^3.3.4",
    "zod": "^3.22.4",
    "date-fns": "^3.3.1",
    "react-dropzone": "^14.2.3",
    "react-markdown": "^9.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "@types/react-syntax-highlighter": "^15.5.11",
    "framer-motion": "^11.0.3",
    "react-hot-toast": "^2.4.1",
    "react-virtual": "^2.10.4",
    "js-cookie": "^3.0.5",
    "@types/js-cookie": "^3.0.6"
  },
  "devDependencies": {
    "@remix-run/eslint-config": "^2.8.1",
    "@types/node": "^20.11.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "typescript": "^5.3.3",
    "vite": "^5.1.3",
    "vite-tsconfig-paths": "^4.3.1",
    "vitest": "^1.2.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^24.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "enterprise",
    "llm",
    "ai",
    "chat",
    "machine-learning",
    "react",
    "remix",
    "typescript"
  ],
  "author": "Olian Development Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/olian-enterprise-llm"
  },
  "bugs": {
    "url": "https://github.com/your-org/olian-enterprise-llm/issues"
  },
  "homepage": "https://github.com/your-org/olian-enterprise-llm#readme"
